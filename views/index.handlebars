
<form class="create-form">
    <h2>Add a burger here!</h2>
    <div class="form-group">
        <label for="burger">Type of burger:</label>
        <input type="text" id="burger" name="name">
    </div>
    <button type="submit">Add Burger!</button>
</form>
<br>
<br>

<div class="row">
    <div class="col-md-6">
        <h2>Burgers yet to be enjoyed!</h2>
        <ul>
            {{#each burgers}}
                {{#unless devoured}}
                <li>
                    <p>{{id}}.  {{name}} <button class="change-devoured" data-id="{{id}}" data-newdevoured="{{devoured}}"> DEVOUR!
	</button> </p>
                    </li>
                {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-md-6">
        <h2>Wall of Remeberance (Burgers you already ate)</h2>
        <ul>
            {{#each burgers}}
                {{#if devoured}}
                    <li>
                    <p>{{id}}.  {{name}} </p>
                    </li>
                {{/if}}
            {{/each}}
        </ul>
    </div>
</div>
