
<form class="create-form">
    <h2>Add a burger here!</h2>
    <div class="form-group">
        <label for="burger">Type of burger:</label>
        <input type="text" id="burger" name="name">
    </div>
    <button type="submit">Add Burger!</button>
</form>

<div class="row">
    <div class="col-md-6">
        <ul>
            {{#each burgers}}
                {{#unless devoured}}
                    {{> burgers/burger-block devoured=true}}
                {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-md-6">
        <ul>
            {{#each burgers}}
                {{#if devoured}}
                    {{> burgers/burger-block devoured=false}}
                {{/if}}
            {{/each}}
        </ul>
    </div>
</div>
